{
  "type": "panel",
  "background": "#1a1a1a",
  "borderRadius": 12,
  "padding": 20,
  "elements": [
    {
      "type": "image",
      "binding": "dynamicImage",
      "width": "100%",
      "height": 250,
      "objectFit": "cover",
      "borderRadius": 8,
      "marginBottom": 12
    },
    {
      "type": "text",
      "binding": "dynamicTitle",
      "fontSize": 26,
      "color": "#ffffff",
      "align": "left",
      "fontWeight": "bold",
      "marginBottom": 8
    },
    {
      "type": "text",
      "binding": "dynamicDescription",
      "fontSize": 18,
      "color": "#cccccc",
      "align": "left",
      "lineHeight": 1.4
    }
  ]
}









